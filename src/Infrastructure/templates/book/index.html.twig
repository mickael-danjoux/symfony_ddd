{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>List</h1>
        <a href="{{ path('app_book_add') }}" class="btn btn-primary">Add</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Isbn</th>
            <th scope="col">Title</th>
            <th scope="col">Summary</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <th scope="row">{{ book.isbn }}</th>
                <td>{{ book.title }}</td>
                <td>{{ book.summary }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h6>[Insert Pagination template]</h6>
{% endblock %}
